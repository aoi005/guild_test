        <script>
            let $b_member = document.getElementById("b_member");
            let $b_kanyuu = document.getElementById("b_kanyuu");
            let $b_kotei = document.getElementById("b_kotei");
            let $b_situmon = document.getElementById("b_situmon");
            let $b_help = document.getElementById("b_help");
            let $c_member = document.getElementById("c_member");
            let $c_kanyuu = document.getElementById("c_kanyuu");
            let $c_kotei = document.getElementById("c_kotei");
            let $c_situmon = document.getElementById("c_situmon");
            let $c_help = document.getElementById("c_help");
            
            reset_styles = function() {
            $b_member.style.color = "";
            $b_kanyuu.style.color = "";
            $b_kotei.style.color = "";
            $b_situmon.style.color = "";
            $b_help.style.color = "";
            $c_member.style.display = "none";
            $c_kanyuu.style.display = "none";
            $c_kotei.style.display = "none";
            $c_situmon.style.display = "none";
            $c_help.style.display = "none";
            };
            
            change_style = function(button, item) {
            button.style.color = "blue";
            item.style.display = "block";
            };
            
            $b_member.addEventListener("click", function() {
            reset_styles();
            change_style(this, $c_member);
            });
            
            $b_kanyuu.addEventListener("click", function() {
            reset_styles();
            change_style(this, $c_kanyuu);
            });

            $b_kotei.addEventListener("click", function() {
            reset_styles();
            change_style(this, $c_kotei);
            });

            $b_situmon.addEventListener("click", function() {
            reset_styles();
            change_style(this, $c_situmon);
            });

            $b_help.addEventListener("click", function() {
            reset_styles();
            change_style(this, $c_help);
            });
            
            // デフォルトでメンバー勧誘のみ表示
            change_style($b_member, $c_member);
        </script>
    </body>
